<html>
  <head>
    <title>
      {{#if loggedin}}
        Welcome {{userName}}
        {{else}}
          User
        {{/if}}
    </title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/styles/style.css"/>
  </head>
  <body class="container">
    <div class="page-header">
      <h1>Rolodex</h1>
    </div>

    <nav class="navbar navbar-default">
    <div class="container-fluid"></div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><a href="/">Home</a></li>
          <li><a href="/signup">Sign Up</a></li>
          <li><a href="/dashboard">Your Rolodex</a></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          {{#if loggedin}}
            <li><a href="/logout">Logout</a></li>
          {{else}}
            <li><a href="/login">Login</a></li>
          {{/if}}
        </ul>
      </div>
      </div>
    </nav>

  {{#if loggedin}}
  <section class="main-container">
  <div class="deck"></div>
  <div class="new-contact-container">
    <div class="new-contact-section">
      <h2>Add a homie</h2>
      <form>
        <label for="fname">First name:</label><br />
        <input type="text" id="contact-fname" name="fname" /><br />
        <label for="lname">Last name:</label><br />
        <input type="text" id="contact-lname" name="lname" /><br />
        <label for="email">Email:</label><br />
        <input type="email" id="contact-email" name="email" /><br />
        <label for="phone">Phone Number:</label><br />
        <input type="tel" id="contact-phone" name="phone" /><br />
      </form>
      <div class="icons">
        <button type="submit" value="Submit" id="save-contact">
          Submit
        </button>
      </div>
    </div>
  </div>
</section>
{{/if}}

    {{{body}}}

<script src="/public/js/contact-form.js"></script>
<script src="/public/js/rolodex.js"></script>


  </body>
</html>